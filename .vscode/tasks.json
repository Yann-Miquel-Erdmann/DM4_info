{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "type": "shell",
      "command": "find . \\( -name \"*.o\" -o -name \"*.out\" -o -name \"*.cmi\" -o -name \"*.cmx\" -o -name \"*.cmo\" \\) -type f -delete",
      "args": []
    },
    {
      "label": "build",
      "type": "shell",

      "command": "ocamlopt",
      "args": [
        "base_satsolver.ml",
        "variable_priority.ml",
        "valuation.ml",
        "satsolver.ml",
        "algo_quine.ml",
        "algo_naif.ml",
        "main.ml",
        "-o",
        "a.out"
      ],
      "options": {
        "cwd": "${workspaceFolder}/Ocaml"
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "./a.out test"
    },
    {
      "label": "build and run test",
      "dependsOn": ["build", "run test"]
    }
  ]
}
